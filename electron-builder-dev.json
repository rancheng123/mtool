    "productName": "mTool",
    "appId": "com.mxj360.mTool",
    "electronVersion": "5.0.6",
    "directories": {
        "buildResources": "build",
        "output": "dev-release",
        "app": "."
    },

    "files": [
        "./build/",
        "./config/",
        "./dist/",
        "./static/",
        "./node_modules/",
        "electron-builder-dev.json",
        "package.json",
